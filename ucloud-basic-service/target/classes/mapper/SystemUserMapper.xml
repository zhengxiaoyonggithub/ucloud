<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ucloud.basic.service.dao.SystemUserMapper">

    <select id="findUserByUsername" parameterType="String" resultType="com.ucloud.basic.service.pojo.SystemUser">
        select * from sys_user where username = #{username}
    </select>
</mapper>